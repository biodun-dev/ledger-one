{
  "name": "ledger-one-monorepo",
  "version": "1.0.0",
  "private": true,
  "scripts": {
    "dev": "concurrently \"pnpm --filter frontend dev\" \"pnpm --filter backend start:dev\" --names \"WEB,API\" --prefix-colors \"blue,magenta\"",
    "db:up": "docker-compose up -d",
    "db:down": "docker-compose down",
    "build": "pnpm -r run build",
    "test": "pnpm -r run test"
  },
  "devDependencies": {
    "concurrently": "^9.0.0"
  }
}
